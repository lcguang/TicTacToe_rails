<h1>Log In</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3 login-form">
    <%= simple_form_for :session, url: login_path do |f| %>
        <%= f.input :name %>
        <%= f.input :password %>
        <%= f.button :submit, 'Log In', class: "btn btn-primary login-submit" %>
    <% end %>
    <div class="signup-path">
      <%= link_to 'New user? Sign up here', new_user_path %>
    </div>
  </div>
</div>
