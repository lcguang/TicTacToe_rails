<h1>Sign Up</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3 signup-form">
    <%= simple_form_for @user do |f| %>
        <%= f.input :name %>
        <%= f.input :password %>
        <%= f.button :submit, 'Sign Up', class: "btn btn-primary signup-submit" %>
    <% end %>
  </div>
</div>
